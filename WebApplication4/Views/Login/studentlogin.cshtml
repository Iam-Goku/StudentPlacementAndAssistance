@model WebApplication3.Models.studlog
@{
    ViewBag.Title = "studentlogin";
}

<link href="~/css/Login.css" rel="stylesheet" />


<div class="container">
    @using (Html.BeginForm("studentlogin", "Login", FormMethod.Post))
    {
        <div style="background-image:linear-gradient(rgb(255, 255, 255),rgb(0, 148, 255))">
            <center><P style="font-size:50px;color:crimson"><b>STUDENT LOGIN</b></P></center>
        </div>

        <center><label for="username"><b>USER NAME</b></label>
        <input type="text" placeholder="Enter username" name="username" id="username" required></center>
        <br/>

       <center> <label for="password"><b>PASSWORD</b></label>
        <input type="password" placeholder="Enter Password" name="password" id="password" required></center>


        <div>
            <button type="submit" class="login">Login</button>
            <strong>@Html.DisplayFor(m => m.msg)</strong>

        </div>
    }
</div>