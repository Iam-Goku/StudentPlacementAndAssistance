@model WebApplication3.Models.adminlog
@{
    ViewBag.Title = "adminlogin";
}

<link href="~/css/Login.css" rel="stylesheet" />
<div class="container">
    @using (Html.BeginForm("adminlogin", "Login", FormMethod.Post))
    {
        <div  style="background-image:linear-gradient(rgb(255, 255, 255),rgb(0, 148, 255))">
            <center><P style="font-size:50px;color:crimson"><b>ADMIN LOGIN</b></P></center>
        </div>

       
            <center>
                <label  for="name"><b>NAME</b></label>
                <input type="text" placeholder="Enter name" name="name" id="name" required>
                <br />
            </center>
            <center>
                <label  for="password"><b>PASSWORD</b></label>
                <input type="text" placeholder="Enter Password" name="password" id="password" required>
                <br />
            </center>
        

        <div>
         
            <button type="submit" class="login">Login</button>
            <strong>@Html.DisplayFor(m => m.msg)</strong>

        </div>
    }
</div>